<html>
<head>
    <title>fatSocial - Login</title>

    <% include ../partials/head.ejs %>

    <link rel="stylesheet" href="/css/index.css">
</head>
<body>

<% if (msg || msg_title) { %>
    <% var popup_title = msg_title %>
    <% var popup_content = msg %>
    <% include ../partials/popup.ejs %>
<% } %>

<div class="container-fluid" id="index-header">
    <div id="header-logo">fat<span>Social</span></div>
    <div id="header-tagline">To make introverts look like extroverts</div>
</div>

<div id="index-main">
    <div class="container">
        <div>
            <form action="/" method="post" id="section-login">
                <div class="form-title">Login</div>
                <div class="form-desc">
                    You know the drill<br>:)
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" name="username" placeholder="Username" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Password" required>
                </div>

                <div class="form-group">
                    <input type="submit" class="form-control btn btn-primary" name="login" value="Login">
                </div>

                <div class="form-group remember-me">
                    <label><input type="checkbox" name="remember">Remember me</label>
                </div>
            </form>

            <div>
                #get #a #life
            </div>
        </div>

        <div>
            <form action="/" method="post" id="section-register">
                <div class="form-title">Sign Up</div>
                <div class="form-desc">
                    Sign up to peek into and comment on other people's lives
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Full Name" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="username" placeholder="Username" required>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Email Id" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="Password" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password2" placeholder="Retype Password" required>
                </div>

                <div class="form-group">
                    <input type="submit" class="form-control btn btn-primary" name="register" value="Sign Up">
                </div>
            </form>
        </div>
    </div>
</div>

</body>
</html>